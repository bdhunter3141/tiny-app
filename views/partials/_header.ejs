<header>
  <h1><strong>TinyApp</strong></h1>
    <% if (!user_id) { %>
      <form method="POST" action="/login">
        <input type="text" name="user_id">
        <input type="submit" value="Login">
      </form>
    <% } else { %>
      <p style="display:inline-block;">
      Welcome, <%= user_id.id %>!
      </p>
      <form method="POST" action="/logout" style="display:inline-block; padding-left:10px;">
        <input type="submit" value="Logout">
      </form>
    <% }; %>
</header>